<?xml version="1.0"?>
<noscroll.xml>

    <!--
    "True" - No scrolling into sniper mode

    "False" - scrolling into sniper mode possible
	If the file noscroll.xml is missing this equals to false

    -->

    <noscroll>False</noscroll>

    <!--
	Zoom modification
	
    "True" - if this value is set zoom values are taken from 
			 gui/avatar_input_handler.xml, if zoomX4-mod is installed from gui/zoomX4.xml

    "False" - zoom modification disabled

	if noscroll.xml is missing this defaults to False
    -->

    <defzoom>True</defzoom>

</noscroll.xml>